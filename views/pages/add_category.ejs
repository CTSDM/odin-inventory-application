<%- include('../partials/_head.ejs') %> <%- include('../partials/header.ejs') %>
<div class="add-category">
    <% if (locals.successAddNewCategory) { %>
    <span>The new category was successfully added!</span>
    <% } %> <% if (locals.errors) { %> Please, fix the following errors:
    <ul class="errors">
        <% locals.errors.forEach((error) => { %>
        <li><%= error.msg %></li>
        <% }) %>
    </ul>
    <% } %> <% if(locals.requirements) { %>
    <form action="/categories/new" method="post">
        <label for="category-name">Name: </label>
        <input
            type="text"
            name="name"
            id="category-name"
            minlength="<%= locals.requirements.category.minLength %>"
            maxlength="<%= locals.requirements.category.maxLength %>"
            required
        />
        <label for="category-categoryId">Category</label>
        <% if (locals.categories) { %>
        <select name="categoryId" id="category-categoryId" required>
            <% locals.categories.forEach((category) => { %>
            <option value="<%= category.id %>"><%= category.name %></option>
            <% }) %>
        </select>
        <% } %>
        <button type="submit">Add new category</button>
    </form>
    <% } %>
</div>
<%- include('../partials/_footer.ejs') %>
